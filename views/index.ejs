<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="../css/materialize.min.css"  media="screen,projection"/>
    <link href='https://fonts.googleapis.com/css?family=Shadows+Into+Light' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link type="text/css" rel="stylesheet" href="../css/style.css">
    <title>visio</title>
  </head>
  <body>

    <div class="navbar-fixed">
      <nav class="blue darken-1">
        <div class="nav-wrapper">
          <a href="#!" class="center brand-logo">visio</a>
        </div>
      </nav>
    </div>
    <br>

    <% mixed.forEach(function(mixed) { %>
        <button onclick='responsiveVoice.speak(<%= JSON.stringify(mixed.name) %> + " posted " + <%= JSON.stringify(mixed.text) %>);' class="waves-effect waves-light hide btn" style="margin: 5px;">ðŸ”Š Play</button>
    <% }); %>


    <% desc.forEach(function(desc) { %>
        <button onclick='responsiveVoice.speak("I see a picture post with " + <%= JSON.stringify(desc.text) %>);' class="dsc waves-effect waves-light hide btn" style="margin: 5px;">ðŸ”Š Play</button>
    <% }); %>

    <% mixed.forEach(function(mixed) { %>
    <div class="row">
      <div class="col m4 offset-m4">
        <div class="card">
          <div class="card-image">
            <img src="<%= mixed.img %>">
            <span class="card-title"><%= mixed.name %></span>
          </div>
          <div class="card-content">
            <p><%= mixed.text %></p>
          </div>
        </div>
      </div>
    </div>
    <% }); %>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="../js/materialize.min.js"></script>
    <script type="text/javascript" src="../js/index.js"></script>
    <script   src="https://code.jquery.com/jquery-3.2.1.slim.min.js"   integrity="sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g="   crossorigin="anonymous"></script>
    <script src='https://code.responsivevoice.org/responsivevoice.js'></script>
  </body>
</html>
